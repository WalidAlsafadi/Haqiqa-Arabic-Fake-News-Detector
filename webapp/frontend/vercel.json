{
  "name": "haqiqa-fake-news-detector",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "public": false,
  "env": {
    "NEXT_PUBLIC_APP_NAME": "حقيقة - Haqiqa",
    "NEXT_PUBLIC_APP_DESCRIPTION": "Palestine Fake News Detector"
  },
  "functions": {
    "app/**": {
      "runtime": "nodejs18"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ]
}
